#include <stdio.h>

int main()
{
    int n;
    scanf("%d",&n);
    for(int i=1;i<=n;i++){                     //for number of rows
        for(int j=1;j<=n-i;j++){              //for blank spaces
            printf(" ");
        }
        for(int k=1;k<=(i*2)-1;k++){          //for stars
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
