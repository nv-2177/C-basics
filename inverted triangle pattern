#include <stdio.h>

int main()
{
    int n;
    scanf("%d",&n);
    for(int i=0;i<=n;i++){                    //for number of rows
        for(int j=0;j<i;j++){                //for number of spaces
            printf(" ");
        }
        for(int k=0;k<2*(n-i)-1;k++){        //number of stars
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
